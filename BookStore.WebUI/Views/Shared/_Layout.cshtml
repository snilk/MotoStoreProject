<!DOCTYPE html>
<html ng-app="bookStore">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Library</title>
    <base href="/">
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.8/angular-material.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/angular-toastr@2/dist/angular-toastr.css">
    <link href="~/Content/styles.css" rel="stylesheet" type="text/css" />

</head>
<body ng-controller="bookStoreController">

    <div ng-class="{active: isLogInShow}" class="pop_up_sign">
        <div class="pop_up-container">
            <div class="container" ng-class="{ 'log-in': isLogIn }">
                <div class="box">
                    <div class="container-forms">
                        <div class="container-info">
                            <div class="info-item">
                                <div class="table">
                                    <div class="table-cell">
                                        <p>Уже зарегистрированы?</p>
                                        <div class="btn" ng-click="toggleAuthForm()">Войти</div>
                                    </div>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="table">
                                    <div class="table-cell">
                                        <p>Нету личного аккаунта?</p>
                                        <div class="btn" ng-click="toggleAuthForm()">Зарегистрироваться</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="container-form">
                            <div class="form-item log-in">
                                <div class="table">
                                    <div class="table-cell">
                                        <input type="text" name="Username" ng-model="loginUsername" placeholder="Логин">
                                        <input type="password" name="Password" ng-model="loginPassword" placeholder="Пароль">
                                        <div class="btn" id="submit_log" ng-click="logInUser()">Войти</div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-item sign-up">
                                <div class="table">
                                    <div class="table-cell">
                                        <input type="text" ng-model="registerUsername" placeholder="Логин">
                                        <input type="password" ng-model="registerPassword" placeholder="Пароль">
                                      
                                        <input type="text" ng-model="registerName" placeholder="Имя">
                                        <input type="text" ng-model="registerSurname" placeholder="Фамилия">
                                        <input type="email" ng-model="registerEmail" placeholder="E-mail">
                                        <input type="text" ng-model="registerPhone" placeholder="Телефон">
                                        <div class="btn" id="submit" ng-click="registerUser()">Зарегистрироваться</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <i class="fa fa-times fa-lg" id="close_popup_in" ng-click="toggleLogIn()" aria-hidden="true"></i>
        </div>
    </div>
<header>
    <div style="margin-right:45px">
        <button class="sign_out" ng-click="toggleLeft()">Фильтр</button>
        <button class="sign_out" ng-click="logOut()" ng-show="isAuthorizated">Выйти</button>
        <button class="sign_in" ng-show="!isAdmin" ng-click="toggleLogIn()">{{isAuthorizated ? 'Профиль' : 'Войти'}}</button>
        <button class="sign_in" ng-show="isAdmin" ng-click="goToAdmin()">Администратор</button>
    </div>
</header>
    <div class="wrapper">
        <nav class="list_section">
            <ul>
                <li>
                    <button ng-click="selectSection('All')" class="back_main"><i class="fa fa-chevron-left" aria-hidden="true"></i>На главную</button>
                </li>
                <li ng-repeat="item in bookSections track by $index">
                    <span>/</span>
                    <button ng-click="selectSection(item.Section)" class="section">{{item.Section}}</button>
                </li>
            </ul>
        </nav>
    </div>

    <div class="page_wrapper">
        <ui-view></ui-view>
        <div class="push"></div>
    </div>

    <footer class="page_footer">
        <span class="footer_coorp_title">
            &copy; Love'Eina
        </span>
        <div class="footer_store_conatiner">
            <span class="footer_coorp_title">
               Офисы: 
            </span>
            <p ng-repeat="shop in shopsInfo">
                {{shop.Address}}; {{shop.Phone1}}, {{shop.Phone2}}
            </p>
        </div>
    </footer>

    <md-sidenav class="side_bar md-sidenav-left" md-component-id="left"
                md-disable-backdrop md-whiteframe="4">

        <md-toolbar class="md-theme-indigo">
            <h1 class="md-toolbar-tools">Filter Books</h1>
        </md-toolbar>

        <md-content layout-margin>
            <div>
                <md-input-container class="md-block" flex-gt-sm>
                    <label>Категория</label>
                    <md-select ng-model="Section">
                        <md-option><em>None</em></md-option>
                        <md-option ng-repeat="Section in sections" ng-value="Section.Section">
                            {{Section.Section}}
                        </md-option>
                    </md-select>
                </md-input-container>
                <md-input-container class="md-block" flex-gt-sm>
                    <label>Уровень</label>
                    <md-select ng-model="Level">
                        <md-option><em>None</em></md-option>
                        <md-option ng-repeat="Level in levels" ng-value="Level">
                            {{Level}}
                        </md-option>
                    </md-select>
                </md-input-container>
                <span>Год публикации</span>
                <div class="group_input">
                    <md-input-container class="md-block" flex-gt-sm>
                        <label>с</label>
                        <input ng-model="YearofIssue.Low">
                    </md-input-container>
                    <md-input-container class="md-block" flex-gt-sm>
                        <label>по</label>
                        <input ng-model="YearofIssue.High">
                    </md-input-container>
                </div>
                <md-input-container class="md-block" flex-gt-sm>
                    <label>Автор</label>
                    <md-select ng-model="Author">
                        <md-option><em>None</em></md-option>
                        <md-option ng-repeat="Author in authors" ng-value="Author">
                            {{Author}}
                        </md-option>
                    </md-select>
                </md-input-container>
                <span>Цена</span>
                <div class="group_input">
                    <md-input-container class="md-block" flex-gt-sm>
                        <label>от</label>
                        <input ng-model="Price.Low">
                    </md-input-container>
                    <md-input-container class="md-block" flex-gt-sm>
                        <label>до</label>
                        <input ng-model="Price.High">
                    </md-input-container>
                </div>
            </div>
            <md-button ng-click="toggleLeft()">
                Закрыть
            </md-button>
            <md-button ng-click="filter()">
                Фильтр
            </md-button>
            <md-button ng-click="clearFiler()">
                Очистить фильтр
            </md-button>
        </md-content>
    </md-sidenav>

    @RenderBody()
    <!-- libraries -->
    <script src="~/SPA/lib/jquery-1.10.2.min.js"></script>
    <script src="~/SPA/lib/bootstrap.min.js"></script>
    <script src="~/SPA/lib/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/1.0.3/angular-ui-router.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular-messages.min.js"></script>

    <!-- Angular Material Library -->
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.8/angular-material.min.js"></script>
    <script src="~/SPA/lib/stateEvents.js"></script>
    <script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.12.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/angular-toastr@2/dist/angular-toastr.tpls.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>


    <!-- main scripts -->
    <script src="~/SPA/main.js"></script>
    <script src="~/SPA/common/common.js"></script>
    <script src="~/SPA/common/service/sectionsService.js"></script>
    <script src="~/SPA/common/service/registerService.js"></script>
    <script src="~/SPA/common/service/adressShops.js"></script>
    <script src="~/SPA/common/filter/dateFilter.js"></script>
    <script src="~/SPA/common/directive/range.js"></script>
    <script src="~/SPA/sections/sections.js"></script>
    <script src="~/SPA/sections/controller/sectionsController.js"></script>
    <script src="~/SPA/sections/service/bookBySectionsService.js"></script>
    <script src="~/SPA/individual/individual.js"></script>
    <script src="~/SPA/individual/controller/individualController.js"></script>
    <script src="~/SPA/individual/service/bookService.js"></script>
    <script src="~/SPA/individual/service/orderService.js"></script>
    <script src="~/SPA/profile/profile.js"></script>
    <script src="~/SPA/profile/controller/profileController.js"></script>
    <script src="~/SPA/profile/service/userService.js"></script>
    <script src="~/SPA/admin/admin.js"></script>
    <script src="~/SPA/admin/controller/adminController.js"></script>
    <script src="~/SPA/admin/service/adminService.js"></script>
    <script src="~/SPA/admin/directives/uploadImage.js"></script>


</body>
</html>
